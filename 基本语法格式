// 枚举型
// 元素间以逗号(,)隔开，最后一个元素不加逗号
// 指定某个元素的之后，后续若不显性指定，则依次+1
enum DAY
{
      MON=1, 
      TUE, 
      WED, 
      THU, 
      FRI, 
      SAT, 
      SUN
};


// 结构体
// 成员间已分号（;）隔开
struct Books
{
   char  title[50];
   char  author[50];
   char  subject[100];
   int   book_id;
} book;


